---
import ThemeToggle from './ThemeToggle';
---

<header>
    <h1><a href="/">Dieter Rams</a></h1>
    <ThemeToggle client:load />
</header>

<style is:inline>
    header {
        position: fixed;
        width: 100%;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1000;
        background: linear-gradient(to bottom, var(--bg) 0%, transparent 100%);
    }

    header h1 {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .theme-toggle {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: var(--text);
        transition: background-color 0.3s ease;
    }
</style>