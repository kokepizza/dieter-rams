---
import Preloader from '../components/Preloader';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Nav from '../components/Nav';
import Cursor from '../components/Cursor';

const {
  title = "Dieter Rams",
  description = "“Less, but better.” — The key principle of Dieter Rams, an advocate for functional, honest, and timeless design.",
  preloader = true,
} = Astro.props;
---

<!DOCTYPE html>

<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="kokepizza" />
    <meta name="keywords" content="palabra, palabra, palabra" />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <script is:inline>
      (function() {
        try {
          const saved = localStorage.getItem("theme");
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          const theme = saved || (prefersDark ? "dark" : "light");
          document.documentElement.setAttribute("data-theme", theme);
          document.documentElement.style.backgroundColor = theme === "dark" ? "#1D1D1B" : "#F5F5F5";
          document.body.style.backgroundColor = theme === "dark" ? "#1D1D1B" : "#F5F5F5";
        } catch (e) {}
      })();
    </script>
  </head>

  <body>
    {preloader && <Preloader client:load />}
    <Header />
    <Nav client:only="react"/>
    <Cursor client:only="react" />
    <main>
      <slot />
    </main>
  </body>
</html>